{
  "compilerOptions": {
    "target": "ES6",
    "declaration": true,
    "module": "commonjs",
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "outDir": "./dist/commonjs"
  },
  "include": [
    "src/**/*"
  ]
}
